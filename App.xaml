<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SkinMonitor"
             x:Class="SkinMonitor.App"
             xmlns:converters="clr-namespace:SkinMonitor.Converters"
             xmlns:global="clr-namespace:">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <converters:IsSelectedConverter x:Key="IsSelectedConverter" />
            <converters:IsSelectedTextColorConverter x:Key="IsSelectedTextColorConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:BoolToTextConverter x:Key="BoolToTextConverter" />
            <global:InverseBooleanConverter x:Key="InverseBoolConverter" />
            <global:RiskLevelColorConverter x:Key="RiskLevelColorConverter" />
            <converters:FilePathToImageSourceConverter x:Key="FilePathToImageSourceConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
