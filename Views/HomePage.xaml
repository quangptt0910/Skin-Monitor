<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkinMonitor.Views.HomePage"
             xmlns:controls="clr-namespace:SkinMonitor.Views" 
             Title="SkinMonitor Home">
    <Grid RowDefinitions="*, Auto">
    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- Header -->
            <Border BackgroundColor="#512BD4" Padding="20,30">
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.3" Radius="8" Offset="0,2" />
                </Border.Shadow>
                <VerticalStackLayout Spacing="8">
                    <Label Text="Welcome to SkinMonitor"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="Track and analyze wound healing progress"
                           FontSize="16"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>

            <!-- Content -->
            <VerticalStackLayout Padding="20" Spacing="20" BackgroundColor="#F5F5F5">

                <Label Text="Quick Actions"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#212121"
                       Margin="0,10,0,10" />

                <!-- View Wounds Card -->
                <Border BackgroundColor="White" Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.15" Radius="10" Offset="0,2" />
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnViewWoundsTapped" />
                    </Border.GestureRecognizers>

                    <Grid ColumnSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="30" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" BackgroundColor="#4CAF50" 
                                WidthRequest="50" HeightRequest="50">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="25" />
                            </Border.StrokeShape>
                            <Label Text="ðŸ“‹" FontSize="24" 
                                   HorizontalOptions="Center" 
                                   VerticalOptions="Center" />
                        </Border>

                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="5">
                            <Label Text="View Wounds" FontSize="18" FontAttributes="Bold" TextColor="#212121" />
                            <Label Text="See all tracked wounds and their healing progress" 
                                   FontSize="14" TextColor="#757575" LineBreakMode="WordWrap" />
                        </VerticalStackLayout>

                        <Label Grid.Column="2" Text="â€º" FontSize="30" TextColor="#757575" 
                               VerticalOptions="Center" HorizontalOptions="End" />
                    </Grid>
                </Border>

                <!-- Add Wound Card -->
                <Border BackgroundColor="White" Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.15" Radius="10" Offset="0,2" />
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAddWoundTapped" />
                    </Border.GestureRecognizers>

                    <Grid ColumnSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="30" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" BackgroundColor="#2196F3" 
                                WidthRequest="50" HeightRequest="50">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="25" />
                            </Border.StrokeShape>
                            <Label Text="âž•" FontSize="24" 
                                   HorizontalOptions="Center" 
                                   VerticalOptions="Center" />
                        </Border>

                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="5">
                            <Label Text="Add New Wound" FontSize="18" FontAttributes="Bold" TextColor="#212121" />
                            <Label Text="Document a new wound with photos and details" 
                                   FontSize="14" TextColor="#757575" LineBreakMode="WordWrap" />
                        </VerticalStackLayout>

                        <Label Grid.Column="2" Text="â€º" FontSize="30" TextColor="#757575" 
                               VerticalOptions="Center" HorizontalOptions="End" />
                    </Grid>
                </Border>

                <!-- AI Analysis Card -->
                <Border BackgroundColor="White" Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.15" Radius="10" Offset="0,2" />
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAnalysisTapped" />
                    </Border.GestureRecognizers>

                    <Grid ColumnSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="30" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" BackgroundColor="#FF9800" 
                                WidthRequest="50" HeightRequest="50">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="25" />
                            </Border.StrokeShape>
                            <Label Text="ðŸ”¬" FontSize="24" 
                                   HorizontalOptions="Center" 
                                   VerticalOptions="Center" />
                        </Border>

                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="5">
                            <Label Text="AI Analysis" FontSize="18" FontAttributes="Bold" TextColor="#212121" />
                            <Label Text="View AI-powered healing predictions and insights" 
                                   FontSize="14" TextColor="#757575" LineBreakMode="WordWrap" />
                        </VerticalStackLayout>

                        <Label Grid.Column="2" Text="â€º" FontSize="30" TextColor="#757575" 
                               VerticalOptions="Center" HorizontalOptions="End" />
                    </Grid>
                </Border>
                

            </VerticalStackLayout>
            

            
        </VerticalStackLayout>
        

        
    </ScrollView>
    

        <!-- Page Content -->
        <ScrollView Grid.Row="0">
            <!-- Your main content goes here -->
        </ScrollView>

        <!-- Bottom Navigation Bar -->
        <controls:NavigationBar Grid.Row="1" />
    </Grid>
</ContentPage>
