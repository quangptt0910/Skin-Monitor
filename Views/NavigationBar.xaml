<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="SkinMonitor.Views.NavigationBar">

    <Grid BackgroundColor="{StaticResource PageBackground}" HeightRequest="60" Padding="10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Text="🏠 Home" 
                Grid.Column="0"
                Command="{Binding GoToHomeCommand}" 
                BackgroundColor="{Binding CurrentPage, Converter={StaticResource IsSelectedConverter}, ConverterParameter='Home'}"
                TextColor="{Binding CurrentPage, Converter={StaticResource IsSelectedTextColorConverter}, ConverterParameter='Home'}" 
                FontSize="16"
                FontAttributes="Bold"
                />

        <Button Text="📸 Main" 
                Grid.Column="1"
                Command="{Binding GoToMainCommand}" 
                BackgroundColor="{Binding CurrentPage, Converter={StaticResource IsSelectedConverter}, ConverterParameter='Main'}"
                TextColor="{Binding CurrentPage, Converter={StaticResource IsSelectedTextColorConverter}, ConverterParameter='Main'}"
                FontSize="16"
                FontAttributes="Bold"
                />

        <Button Text="🔬 Analysis" 
                Grid.Column="2"
                Command="{Binding GoToAnalysisCommand}" 
                BackgroundColor="{Binding CurrentPage, Converter={StaticResource IsSelectedConverter}, ConverterParameter='Analysis'}"
                TextColor="{Binding CurrentPage, Converter={StaticResource IsSelectedTextColorConverter}, ConverterParameter='Analysis'}"
                FontSize="16"
                FontAttributes="Bold"
                />

    </Grid>
</ContentView>