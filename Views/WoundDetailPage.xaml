<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkinMonitor.Views.WoundDetailPage"
             Title="Wound Details"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="10">

            <!-- Title -->
            <Label Text="Wound Information"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="#212121"
                   HorizontalOptions="Center"
                   Margin="0,20,0,20" />

            <!-- Info Card -->
            <Border BackgroundColor="White"
                    Padding="20"
                    Margin="0,10"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.15" Radius="8" Offset="0,2" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="10">

                    <!-- Wound Name -->
                    <Label x:Name="WoundNameLabel"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#212121"
                           HorizontalOptions="Center" />

                    <!-- Body Location -->
                    <Label x:Name="BodyLocationLabel"
                           FontSize="18"
                           TextColor="#757575"
                           HorizontalOptions="Center" />

                    <!-- Wound Type Badge -->
                    <Label x:Name="WoundTypeLabel"
                           FontSize="16"
                           TextColor="White"
                           BackgroundColor="#4CAF50"
                           Padding="15,8"
                           HorizontalOptions="Center"
                           Margin="0,10" />

                    <!-- Date Created -->
                    <Label x:Name="DateCreatedLabel"
                           FontSize="14"
                           TextColor="#757575"
                           HorizontalOptions="Center" />

                    <!-- Divider -->
                    <BoxView HeightRequest="1"
                             Color="#E0E0E0"
                             Margin="0,15" />

                    <!-- Notes Label -->
                    <Label Text="Notes:"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#212121" />

                    <!-- Notes Content -->
                    <Label x:Name="NotesLabel"
                           FontSize="16"
                           TextColor="#212121"
                           LineBreakMode="WordWrap" />

                </VerticalStackLayout>
            </Border>

            <!-- Action Buttons -->

            <!-- Take Photo Button -->
            <Button Text="📸 Take New Photo"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="20,15"
                    FontSize="16"
                    FontAttributes="Bold"
                    Margin="0,20,0,10"
                    Clicked="OnTakePhotoClicked" />

            <!-- View Photos Button -->
            <Button Text="🖼️ View All Photos"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="20,15"
                    FontSize="16"
                    FontAttributes="Bold"
                    Margin="0,10"
                    Clicked="OnViewPhotosClicked" />

            <!-- Back Button -->
            <Button Text="← Back"
                    BackgroundColor="Transparent"
                    TextColor="#512BD4"
                    BorderColor="#512BD4"
                    BorderWidth="2"
                    CornerRadius="10"
                    Padding="20,12"
                    FontSize="16"
                    Margin="0,10"
                    Clicked="OnBackClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
